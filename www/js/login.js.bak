function checkLoginPwd(loginPass){
	
	 //var loginPass = loginUserInfo_a.loginPass;
	 
   var checkPwd = false;
   
	 var regNumber = /\d+/; //验证0-9的任意数字最少出现1次。
	 var regString = /[a-zA-Z]+/; //验证大小写26个字母任意字母最少出现1次。
	 var regUpCase = /[A-Z]/; //验证密码是否包括大写字母。
	 
